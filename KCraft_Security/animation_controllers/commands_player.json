{
	"format_version": "1.17.15",
	"animation_controllers": {
		"controller.animation.kcraft_player.watch": {
			"states": {
				"default": {
					"transitions": [
						{
							"execute_command_id_1": "query.head_x_rotation(0) <= -60"
						}
					]
				},
				"execute_command_id_1": {
					"animations": [
						"animation.player.states"
					],
					"transitions": [
						{
							"default": "q.all_animations_finished"
						}
					],
					"on_exit": [
						"/say test"
					]
				},
				"execute_command_id_2": {
					"transitions": [
						{
							"default": "query.skin_id == 0"
						}
					],
					"on_entry": [
						"/tag @s[tag=!staff] add adv",
						"@s kcraft:remove_command_id"
					]
				}
			}
		},
		"controller.animation.kcraft.adv_cmds": {
			"states": {
				"default": {
					"transitions": [
						{
							"adv_1": "v.attack_time > 0"
						}
					],
					"on_entry": [
						"/execute @s ~ -64 ~ fill ~-30 ~ ~-30 ~30 ~ ~30 bedrock 0 replace deny"
					]
				},
				"adv_1": {
					"on_entry": [
						"/execute @s[tag=!staff] ~ -64 ~ fill ~-15 ~ ~-15 ~15 ~ ~15 deny 0 replace bedrock"
					],
					"transitions": [
						{
							"adv_2": "v.attack_time > 0"
						},
						{
							"default": "!v.attack_time"
						}
					]
				},
				"adv_2": {
					"on_entry": [
						"/execute @s[tag=!staff] ~ -64 ~ fill ~-15 ~ ~-15 ~15 ~ ~15 deny 0 replace bedrock"
					],
					"transitions": [
						{
							"adv_1": "v.attack_time > 0"
						},
						{
							"default": "!v.attack_time"
						}
					]
				}
			}
		}
	}
}
