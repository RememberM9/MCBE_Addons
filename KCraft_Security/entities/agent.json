{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:agent",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false
    },
    "component_groups": {
      "kcraft_die": {
        "minecraft:instant_despawn": {
          "remove_child_entities": true
        }
      },
      "kcraft_add_agent": {
        "minecraft:tick_world": {
        },
        "minecraft:damage_sensor": {
          "triggers": {
            "cause": "all",
            "deals_damage": false
          }
        },
        "minecraft:fire_immune":{
        },
        "minecraft:inventory": {
          "inventory_size": 54,
          "container_type": "container", 
          "restrict_to_owner": true
        },
        "minecraft:movement": {
          "value": 1,
          "max": 1
        },
        "minecraft:behavior.look_at_entity": {
          "priority": 2,
          "look_distance": 6.0,
          "probability": 1.0,
          "angle_of_view_vertical": 135,
          "angle_of_view_horizontal": 170,
          "filters": { 
                  "all_of": [
                    { "test" :  "is_family", "subject" : "other", "value" :  "player"},
                    { "test" :  "is_owner", "subject" : "other", "value" :  true}
                  ] 
          }
        },
        "minecraft:persistent": {
        },
        "minecraft:pushable": {
          "is_pushable": false,
          "is_pushable_by_piston": true
        }
      }
    },
    "components": {
      "minecraft:scale": {
          "value":1.0
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 0.93
      },
      "minecraft:nameable": {
        "allow_name_tag_renaming": true,
        "name_actions": [
          {
            "name_filter": "staff",
            "on_named": {
              "event": "kcraft:add_default",
              "target": "self"
            }
          },
          {
            "name_filter": "despawn",
            "on_named": {
              "event": "kcraft:instant_despawn",
              "target": "self"
            }
          }
        ]
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "vulnerable"
          ]
        }
      },
      "kcraft:instant_despawn":{
        "sequence": [
          {
            "remove": {
              "component_groups": [
                "kcraft_add_agent"
              ]
            }
          },
          {
            "add": {
              "component_groups": [
                "kcraft_die"
              ]
            }
          }
        ]
      },
      "minecraft:entity_transformed": {
        "add": {
          "component_groups": [
            "kcraft_die"
          ]
        }
      },
      "kcraft:add_default": {
        "remove": {
          "component_groups": [
            "vulnerable"
          ]
        },
        "add": {
          "component_groups": [
            "kcraft_add_agent"
          ]
        }
      },
      "minecraft:exited_hive": {
      }
    }
  }
}